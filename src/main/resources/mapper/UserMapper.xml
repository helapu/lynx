<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.helapu.lynx.mapper.UserMapper">
	
	<!-- 通用查询映射结果 -->
    <resultMap id="UserResultMap" type="com.helapu.lynx.entity.User">
        <id column="id" property="id"/>
        <result column="mobile" property="mobile"/>
        <result column="username" property="username"/>
                
   		<collection property="deviceList" javaType="ArrayList" column="id" ofType="come.helapu.lynx.entity.Device"                
            select="selectDeviceListByUserId">
        </collection>
		
    </resultMap>
    
	<!-- 通用查询结果列 -->
	<sql id="Base_Column_List">
		id, nickname, username, mobile
	</sql>

	<delete id="deleteAll">
		DELETE FROM USER
	</delete>

	<select id="selectListByWrapper" resultType="com.helapu.lynx.entity.User">
		SELECT * FROM USER
		<!-- 判断 wrapper 是否为空 emptyOfWhere -->
		<where>
			${ew.sqlSegment}
		</where>
	</select>
	
	<resultMap id="userDeviceListResult" type="com.helapu.lynx.entity.User">
		<result property="id" column="user_id" />
		<result property="username" column="username" />
		<result property="mobile" column="mobile" />
	  <collection property="deviceList" javaType="ArrayList" column="id" ofType="com.helapu.lynx.entity.Device" select="selectDeviceForUser"/>
	</resultMap>
	
	<select id="selectDeviceForUser" resultType="com.helapu.lynx.entity.Device">
	  SELECT * FROM device WHERE user_id = #{id}
	</select>
	
</mapper>